<h1>Users#index</h1>
<%= link_to "Add" , new_user_path %>

<table>
<% @users.each do |user| %>
  <tr>
  <td><%= user.name %></td>
  <td><%= image_tag user.photo.url(:thumb) %></td>
  <td><%= link_to "Edit", edit_user_path(user.id) %></td>
  <td><%= link_to "Delete", user_path(user.id) , method: :delete, data: {confirm: 'Are you sure?'}  %></td>
  </tr>
<% end %>
</table>